<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
            <input  class="weui-input" bindchange="bindChange" placeholder="{{ address.address}}" value="{{ address.address}}"/>
        </view>
    </view>
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="choseLocation">
        <view class="weui-cell__bd">
            <image class="me-avatar" src="../../../images/icon/round_add.png" style="width:60rpx;height:60rpx;"></image>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="min-width:48px">{{ info}}</view>
    </view>
    <view class="page__bd page__bd_spacing">
        <view class="weui-cell__bd">
            <button id="nameSave" type="default" bindtap="saveAddress" class="weui-btn">保存</button>
        </view>
    </view>
</view>