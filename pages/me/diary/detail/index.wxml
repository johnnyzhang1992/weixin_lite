<!--index.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">{{ diary.title }}</view>
        <view class="page__desc">{{ diary.created_at}}</view>
        <view class="page__desc">{{ diary.address}}</view>
        <view wx:if="{{ diary.user_id == user_id || user_id== 13}}">
            <view class="weui-media-box__info__meta">
                <navigator url="../new/index?id={{ diary.id }}" hover-class="weui-cell_active">
                    <text style="color:#43ce7b">点我编辑</text>
                </navigator>
            </view>
            <view class="weui-media-box__info__meta">
                <view bindtap="deletePost" data-diary_id="{{ diary.id}}" hover-class="weui-cell_active">
                    <text style="color:#43ce7b">点我删除</text>
                </view>
            </view>
        </view>
    </view>
    <view class="page__bd">
        <view class="weui-article">
            <!--<view class="weui-article__h1">大标题</view>-->
            <view class="weui-article__section">
                <!--<view class="weui-article__title">章标题</view>-->
                <view class="weui-article__section">
                    <view class="weui-article__h3" style="border-bottom:1px solid #ddd">摘要</view>
                    <view class="weui-article__p">
                        <text>
                            {{ diary.description}}
                        </text>
                    </view>
                    <view class="weui-article__h3" style="border-bottom:1px solid #ddd">内容</view>
                    <view class="weui-article__p">
                        <text>
                            {{ diary.content}}
                        </text>
                    </view>
                    <view class="weui-article__section">
                        <view class="weui-article__h3" style="border-bottom:1px solid #ddd">评论</view>
                        <form bindsubmit="commentFormSubmit">
                            <input type="hidden" name="type" value="diary"/>
                            <input type="hidden" name="id" value="{{ diary.id}}"/>
                            <view class="weui-article__p section">
                                <textarea placeholder="请输入内容" name="content"  auto-height/>
                            </view>
                            <button form-type="submit" type="primary"> 提交 </button>
                        </form>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

