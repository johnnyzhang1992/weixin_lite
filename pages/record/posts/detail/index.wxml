<!--index.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">{{ post.title }}</view>
        <view class="page__desc">{{ post.created_at}}</view>
        <view wx:if="{{ post.user_id == user_id || user_id== 13}}">
            <view class="weui-media-box__info__meta">
                <navigator url="../new/index?id={{ post.id }}" hover-class="weui-cell_active">
                    <text style="color:#43ce7b">点我编辑</text>
                </navigator>
            </view>
            <view class="weui-media-box__info__meta">
                <view bindtap="deletePost" data-post_id="{{ post.id}}" hover-class="weui-cell_active">
                    <text style="color:#43ce7b">点我删除</text>
                </view>
            </view>
        </view>
    </view>
    <view class="page__bd">
        <view class="weui-article">
            <!--<view class="weui-article__h1">大标题</view>-->
            <view class="weui-article__section">
                <!--<view class="weui-article__title">章标题</view>-->
                <view class="weui-article__section">
                    <view class="weui-article__h3" style="border-bottom:1px solid #ddd">内容</view>
                    <view class="weui-article__p">
                        <text>
                            {{ post.content}}
                        </text>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

