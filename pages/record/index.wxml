<!--index.wxml-->
<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <view class="weui-panel" style="margin-top:20rpx;">
                        <navigator url="posts/new/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                            <view class="weui-cell__bd">
                                <image class="me-avatar" src="../../images/icon/round_add.png" style="width:60rpx;height:60rpx;"></image>
                            </view>
                            <view class="weui-cell__ft weui-cell__ft_in-access" style="min-width:48px">新增</view>
                        </navigator>
                    </view>
                    <view class="weui-panel">
                        <view class="weui-panel__bd">
                            <view class="weui-media-box weui-media-box_text" wx:for="{{posts}}" wx:key="id" wx:if="{{ item.status == 0 }}">
                                <view class="weui-media-box__title weui-media-box__title_in-text">
                                    <navigator url="posts/detail/index?id={{ item.id}}" hover-class="navigator-hover">
                                        {{ item.title}}{{ item.user_id}}
                                    </navigator>
                                </view>
                                <view class="weui-media-box__desc" wx:if="{{ item.description == NULL || item.description == ''}}">暂无简介</view>
                                <view class="weui-media-box__desc" wx:elif="{{ item.description}}">{{ item.description}}</view>
                                <view class="weui-media-box__info" >
                                    <view class="weui-media-box__info__meta">{{ item.user_name}}</view>
                                    <view class="weui-media-box__info__meta">{{ item.created_at}}</view>
                                    <view class="weui-media-box__info__meta"><view class="weui-badge" style="margin-left: 5px;">{{ item.name}}</view></view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                    <view class="weui-panel" style="margin-top:20rpx;">
                        <navigator url="pois/new/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                            <view class="weui-cell__bd">
                                <image class="me-avatar" src="../../images/icon/round_add.png" style="width:60rpx;height:60rpx;"></image>
                            </view>
                            <view class="weui-cell__ft weui-cell__ft_in-access" style="min-width:48px">新增</view>
                        </navigator>
                    </view>
                    <view class="weui-panel">
                        <view class="weui-panel__bd">
                            <view class="weui-media-box weui-media-box_text" wx:for="{{pois}}" wx:key="id">
                                <view class="weui-media-box__title weui-media-box__title_in-text">
                                    <navigator url="pois/detail/index?id={{ item.id}}" hover-class="navigator-hover">
                                        {{ item.poi_name}}
                                    </navigator>
                                </view>
                                <view class="weui-media-box__desc" wx:if="{{ item.description == NULL || item.description == ''}}">暂无简介</view>
                                <view class="weui-media-box__desc" wx:elif="{{ item.description}}">{{ item.description}}</view>
                                <view class="weui-media-box__info" >
                                    <view class="weui-media-box__info__meta">{{ item.user_name}}</view>
                                    <view class="weui-media-box__info__meta">{{ item.created_at}}</view>
                                    <view class="weui-media-box__info__meta">
                                        <view class="weui-badge" style="margin-left: 5px;" wx:if="{{ item.tag == 'spot'}}">景点</view>
                                        <view class="weui-badge" style="margin-left: 5px;" wx:elif="{{ item.tag == 'university'}}">大学</view>
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                    <view class="weui-panel">
                        <view class="weui-panel__bd">
                            <view class="weui-media-box weui-media-box_text">
                                <view class="weui-media-box__title weui-media-box__title_in-text">
                                    <view style="text-align:center">
                                        敬请期待
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
