<!--index.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">{{userInfo.nickName}}</view>
        <view class="page__desc">微信运动数据</view>
    </view>
    <view class="page__bd">
        <view class="weui-cells__title">最近30天的数据：</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell" wx:for="{{runData}}" wx:key="time">
                <view class="weui-cell__bd">时间：{{item.time}}</view>
                <view class="weui-cell__ft">步数：{{item.step}}</view>
            </view>
        </view>
    </view>
</view>