/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}
.pagination{
  width:100%;
}
.pagination .back,.pagination .forward{
  display:inline-block;
  width:48%;
}
.pagination .back{
  text-align: left;
  padding-left: 2%;
}
.pagination .forward{
  text-align: right;
  padding-right: 2%
}

